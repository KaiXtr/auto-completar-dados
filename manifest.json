{
  "manifest_version": 2,
  "name": "Autocompletar dados pessoais",
  "version": "1.0",

  "description": "Preenche automaticamente formul√°rios de dados pessoais.",

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "64": "icons/icon-64.png"
  },
  "browser_action": {
    "default_icon": "icons/icon-32.png",
    "default_title": "Autocompletar dados pessoais",
    "default_popup": "panel/panel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["background.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "contentScriptFile",
    "contextMenus",
    "storage"
  ]
}
